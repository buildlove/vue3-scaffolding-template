{
    "include": [
        "./**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "types": [
            "vite/client"
        ],
        "jsx": "react",
        "target": "es2020",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    }
}